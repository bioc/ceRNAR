  volume   = 18,
  issue    = 9,
  url      = "https://doi.org/10.1371/journal.pcbi.1010497",
  textVersion = paste("Hsiao Y-W, Wang L, Lu T-P (2022) ceRNAR: An R package for identification and analysis of ceRNA-miRNA triplets. PLoS Comput Biol 18(9): e1010497.")
)
